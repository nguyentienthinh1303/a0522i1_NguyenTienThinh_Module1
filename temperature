<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Temperature</title>
</head>
<body>
<script>
  class Temperature {
    constructor(tempC) {
      this.tempC = tempC;
    }

    changeToF() {
      return 9 / 5 * this.tempC + 32;
    }

    changeToK() {
      return this.tempC + 273.15;
    }
  }
  let temp1= new Temperature(parseInt(prompt("Nhập vào nhiệt độ cần đổi")));
  document.write("Độ F là :" +temp1.changeToF()+"<br>");
  document.write("Độ K là :" +temp1.changeToK());
  alert("Độ F là: "+temp1.changeToF() + " Độ K là :" +temp1.changeToK())
</script>
</body>
</html>
