<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hàm kiểm tra số nguyên tố</title>
</head>
<body>
<script>
  function isPrime(number) {
    let dem = 0;
    for(let i = 1 ; i <= number ; i++ ){
      if(number % i === 0){
        dem++;
      }
    }
    if(dem === 2){
      document.write(number + " là số nguyên tố");
    }else{
      document.write(number + " Không phải số nguyên tố");
    }
  }
  isPrime(parseInt(prompt("Nhập vào số cần kiểm tra:")));
</script>
</body>
</html>
